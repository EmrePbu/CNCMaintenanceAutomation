@page
@model CNCMaintenanceAutomation.Pages.MaintenanceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Maintenance Type</h2>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaintenanceType.Id" />
            <div class="form-group">
                <label asp-for="MaintenanceType.MaintenanceName" class="control-label"></label>
                <input asp-for="MaintenanceType.MaintenanceName" class="form-control" />
                <span asp-validation-for="MaintenanceType.MaintenanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceType.MaintenancePrice" class="control-label"></label>
                <input asp-for="MaintenanceType.MaintenancePrice" class="form-control" />
                <span asp-validation-for="MaintenanceType.MaintenancePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Save" class="btn btn-primary" />*@
                <div class="row">
                    <div class="col-6">
                        @*<i class="fas fa-plus"></i>&nbsp;*@
                        <input type="submit" value="Save" class="btn btn-info form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control"><i class="fas fa-arrow-left"></i>&nbsp; Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@*<div>
        <a asp-page="./Index">Back to List</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
